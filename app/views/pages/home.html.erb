
<!DOCTYPE html>
<html>
<head>
  <title>ECommerce</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "normalize", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "grid", media: "all", "data-turbolinks-track" => true %>
  <link href='http://fonts.googleapis.com/css?family=Grand+Hotel|Quicksand:400,300,700' rel='stylesheet' type='text/css'>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>

  		<script>

<!----- JQUERY FOR SLIDING NAVIGATION --->
$(document).ready(function() {
  $('a[href*=#]:not([href=#])').each(function() {
    if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'')
    && location.hostname == this.hostname
    && this.hash.replace(/#/,'') ) {
      var $targetId = $(this.hash), $targetAnchor = $('[name=' + this.hash.slice(1) +']');
      var $target = $targetId.length ? $targetId : $targetAnchor.length ? $targetAnchor : false;
       if ($target) {
         var targetOffset = $target.offset().top;

<!----- JQUERY CLICK FUNCTION REMOVE AND ADD CLASS "ACTIVE" + SCROLL TO THE #DIV--->
         $(this).click(function() {


           $('html, body').animate({scrollTop: targetOffset}, 800);
           return false;
         });
         // $('#.intro-menu').click(function(){
         // 	$('#.intro-menu').removeClass("active");
         //    $(this).addClass('active');
         // });

         // $('#logo a, #logo-ar a').click(function(){
         // 	$('#nav li a, #nav-ar li a').removeClass("active");
         // });
      }
    }
  });

});

</script>

  <%= csrf_meta_tags %>
</head>
<body>


	<div id="header-logo-1">
		<%= link_to image_tag("lashful-logo-1.png", :alt => 'Sweet and Lashful'), "#intro" %>
    </div> <!-- #header-logo-1 -->


	<div class="grid_12  alpha clearfix intro-menu">
		<ul>
		    <li class="menu-item-1"><%= link_to "Shop", "#second", :class => "" %></li>
			<li class="menu-item-2"><%= link_to "Services", "#third", :class => "" %></li>
			<li class="menu-item-3"><%= link_to "Blog", "#fourth", :class => "" %></li>
			<li class="menu-item-4"><%= link_to "About", "#fifth", :class => "" %></li>
		</ul>
    </div> <!-- .intro-menu -->

        <div id="intro">
        		<div class="container">
	   		<%= render partial: "home" %>
	   		</div> <!-- container -->
		</div> <!--#intro-->

		<div id="second">

		    <%= render partial: "products" %>

		</div> <!--#second-->

		<div id="third">

		   <%= render partial: "services" %>

		</div> <!--#third-->

		<div id="fourth">

			<%= render partial: "blog" %>

		</div>

		<div id="fifth">

			<%= render partial: "about" %>

		</div>

<%= javascript_include_tag "jquery.lettering-0.6.1.min", "data-turbolinks-track" => true %>
<%= javascript_include_tag "jquery.scrollorama", "data-turbolinks-track" => true %>


<script>
var scrollorama = $.scrollorama({ blocks:'.scrollblock' });

scrollorama.animate('.menu-item-1',{ duration: 300, property:'zoom', end: 8 })
scrollorama.onBlockChange(function() {
				var i = scrollorama.blockIndex;
				$('.menu-item-1')
					.css('display','block')
					.text('onBlockChange | blockIndex:'+i+' | current block: '+scrollorama.settings.blocks.eq(i).attr('id'));
			});

</script>

<script>
$(function(){
$('.intro-menu').data('size','big');
});

$(window).scroll(function(){
    var $nav = $('.intro-menu');
    if ($('body').scrollTop() > 0) {
        if ($nav.data('size') == 'big') {
            $nav.data('size','small').stop().animate({
                'margin-top':'-50px'
            }, 600);
        }
    } else {
        if ($nav.data('size') == 'small') {
            $nav.data('size','big').stop().animate({
                'margin-top':'8px'
            }, 600);
        }  
    }
});    


</script>


</body>
</html>